@{
    ViewBag.Title = "Home - Please Register";
}

<!-- Carousel================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/CarouselImages/weights.jpg" alt="First slide" /> <!--style="margin-left: 10.5%"-->
            <div class="container">
                <div class="caption-of-carousel">
                    <h1>Workout Documentation</h1>
                    <p>Record the sets, reps, and weight used for each exercise of your workout. Add tags to sets such to denote things such as "perfect form" or "used a weight belt".</p>
                    <p><a class="btn btn-lg btn-primary" href="/Account/Register" role="button">Register Now</a></p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/CarouselImages/BWChart.jpg" alt="Second slide">
            <div class="container">
                <div class="caption-of-carousel">
                    <h1>Visually Track your Progress</h1>
                    <p>View charts and statistics surrounding your weightlifting career. Look at things such as bodyweight fluctuations, maximum repetition values, total weight lifted, and more.</p>
                    <p><a class="btn btn-lg btn-primary" href="/Account/Register" role="button">Register Now</a></p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/CarouselImages/tireDeadlift.jpg" alt="Third slide">
            <div class="container">
                <div class="caption-of-carousel">
                    <h1>Utilize a Fully Customizable Experience</h1>
                    <p>Everything from workout and exercise names, exercise tags, role models, and more can be manually created or added to your personal profile.</p>
                    <p><a class="btn btn-lg btn-primary" href="/Account/Register" role="button">Register Now</a></p>
                </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
</div>
<!-- /.carousel -->
@Scripts.Render("~/Scripts/UnregisteredIndex/buttonClick.js")