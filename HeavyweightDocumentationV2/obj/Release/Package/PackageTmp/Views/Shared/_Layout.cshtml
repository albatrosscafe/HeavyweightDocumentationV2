<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Heavyweight Documentation</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/BootstrapMods/GeneralMods.css")
    @Scripts.Render("~/bundles/modernizr")



    <!--jQuery UI required files-->
    @Scripts.Render("~/bundles/jquery")

    <link rel="stylesheet" href="~/Scripts/jquery-ui-1.11.2.custom/jquery-ui.min.css" />
    <script src="~/Scripts/jquery-ui-1.11.2.custom/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="~/Content/jQueryUI_Tweaks.css" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Heavyweight Documentation", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "SiteContent")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "SiteContent")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <!--Add readable box here-->
        @RenderBody()
        <hr />
        <footer>
            <p class="text-muted">&copy; @DateTime.Now.Year - Derek Blohowiak</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
